<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:background="@color/tabBarColor">

        <hoangvuanhdeveloper.wordpress.com.rssofflinemoneylover.CustomView.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/standard_margin_10"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_margin_20"
            app:customFont="fonts/Roboto-Regular.ttf"
            tools:ignore="RtlHardcoded,SpUsage" />


        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="@dimen/size_for_button_save"
            android:layout_height="@dimen/size_for_button_save"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/standard_margin_10"
            android:background="@drawable/close_selector"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>